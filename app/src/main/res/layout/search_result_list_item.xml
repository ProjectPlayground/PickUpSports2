<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/event_view_adapter">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:weightSum="5"
        android:id="@+id/search_adapter_linear_layout">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <TextView
                style="@style/list_view_heading"
                android:id="@+id/search_adapter_title"
                android:layout_marginLeft="15dp"
                android:text="title here"/>

            <TextView
                style="@style/list_view_subtext"
                android:id="@+id/search_adapter_location"
                android:layout_below="@+id/search_adapter_title"
                android:layout_marginLeft="25dp"
                android:text="location"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>