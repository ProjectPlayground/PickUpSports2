<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        style="@style/viewable_heading_text"
        android:layout_marginTop="10dp"
        android:id="@+id/view_event_title"
        android:text="title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/creator_sentence"
        android:layout_below="@+id/view_event_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            style="@style/minor_text"
            android:id="@+id/creating_by"
            android:text="created by "
            android:paddingLeft="15dp"
            />
        <TextView
            style="@style/minor_text_link"
            android:id="@+id/view_event_creator"
            android:linksClickable="true"
            android:text="Creator"/>
    </LinearLayout>

    <TextView
        style="@style/minor_text"
        android:id="@+id/event_sport_text"
        android:text="sport"
        android:layout_below="@+id/view_event_creator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        style="@style/minor_text"
        android:id="@+id/event_location_text"
        android:text="location"
        android:layout_below="@+id/event_sport_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        style="@style/minor_text"
        android:id="@+id/event_date_text"
        android:text="date"
        android:layout_below="@+id/event_location_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        style="@style/minor_text"
        android:id="@+id/event_time_text"
        android:text="time"
        android:paddingLeft="10dp"
        android:layout_below="@+id/event_location_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        style="@style/minor_text"
        android:text="cost"
        android:id="@+id/event_cost_text"
        android:layout_below="@id/event_time_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        style="@style/minor_text"
        android:text="notes"
        android:id="@+id/event_notes_text"
        android:layout_below="@id/event_cost_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        style="@style/minor_text"
        android:text="spots remaining"
        android:id="@+id/event_attendance_text"
        android:layout_below="@id/event_notes_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attend"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite"
            android:layout_weight="1"/>
        </LinearLayout>

    <Button
        android:text="Delete"
        android:id="@+id/delete_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>